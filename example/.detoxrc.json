{
  "testRunner": "jest",
  "runnerConfig": "detox/jest-config.json",
  "skipLegacyWorkersInjection": true,
  "apps": {
    "ios.release": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/NucleusUiExample.app",
      "build": "npx pod-install ios && xcodebuild -workspace ios/NucleusUiExample.xcworkspace  -scheme NucleusUiExample -configuration Release -sdk iphonesimulator -derivedDataPath ios/build"
    },
    "ios.debug": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/NucleusUiExample.app",
      "build": "npx pod-install ios && xcodebuild -workspace ios/NucleusUiExample.xcworkspace  -scheme NucleusUiExample -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build"
    },
    "android.release": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/androidTest/release/app-release-androidTest.apk",
      "build": "cd android ; ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release ; cd -"
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 11"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_3a_API_31_arm64-v8a"
      }
    }
  },
  "configurations": {
    "ios": {
      "device": "simulator",
      "app": "ios.release"
    },
    "ios.tdd": {
      "device": "simulator",
      "app": "ios.debug"
    },
    "android": {
      "device": "emulator",
      "app": "android.release"
    }
  }
}
