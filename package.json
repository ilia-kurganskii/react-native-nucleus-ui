{
  "name": "react-native-nucleus-ui",
  "version": "0.3.0",
  "description": "UI Kit for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "fonts",
    "ios",
    "cpp",
    "react-native.config.js",
    "react-native-nucleus-ui.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "start": "tsc --watch",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/ilya-kurganskii/react-native-nucleus-ui",
  "author": "Ilia Kurganskii <ilya.kurganskii@gmail.com> (https://github.com/ilya-kurganskii)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ilya-kurganskii/react-native-nucleus-ui/issues"
  },
  "homepage": "https://github.com/ilya-kurganskii/react-native-nucleus-ui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.1.0",
    "@react-native-community/eslint-config": "3.1.0",
    "@release-it/conventional-changelog": "5.1.0",
    "@types/jest": "29.0.3",
    "@types/react": "17.0.50",
    "@types/react-native": "0.67.12",
    "@types/react-test-renderer": "17.0.2",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "babel-jest": "29.0.3",
    "commitlint": "17.1.2",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.0.3",
    "metro-react-native-babel-preset": "0.72.3",
    "pod-install": "0.1.38",
    "prettier": "2.7.1",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-builder-bob": "0.18.3",
    "release-it": "15.4.2",
    "typescript": "4.8.3",
    "ws": "8.8.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "\\.spec.(ts|tsx)$",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true,
      "allowSameVersion": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
